{
    "name": "smartassert/yaml-file",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/smartassert/yaml-file",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "scripts": {
        "cs-fixer-dry-run": "docker run --rm $(if [ ! -z \"${NO_TTY}\" ]; then echo \"\"; else echo \"-t\"; fi) -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --dry-run --verbose --show-progress none",
        "cs-fixer-fix": "docker run --rm $(if [ ! -z \"${NO_TTY}\" ]; then echo \"\"; else echo \"-t\"; fi) -w=/app -v ${PWD}:/app oskarstark/php-cs-fixer-ga:latest --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "autoload": {
        "psr-4": {
            "SmartAssert\\YamlFile\\": "src/",
            "SmartAssert\\Tests\\YamlFile\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "symfony/yaml": "^6.0",
        "webignition/yaml-document-set-parser": ">=2.0,<3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "dev-master#51335eb46b2b940b6c429643fe96f514d4a4e4a1",
        "phpstan/phpstan": "^1.4",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "minimum-stability":"stable",
    "prefer-stable":true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
