{
    "name": "smartassert/yaml-file",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/smartassert/yaml-file",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "scripts": {
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "autoload": {
        "psr-4": {
            "SmartAssert\\YamlFile\\": "src/",
            "SmartAssert\\Tests\\YamlFile\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "symfony/yaml": "^6.4 || ^7.0",
        "webignition/yaml-document-set-parser": ">=2.0,<3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.90",
        "mockery/mockery": "^1.5",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^10.5",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "minimum-stability":"stable",
    "prefer-stable":true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
